<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>show</td>
      <td>edit</td>
      <td>destroy</td>
    </tr>
  </tbody>
  <% end %>
</table>

<h2>New book</h2>
<%= form_with model:@book,local:true do |f| %>
<label>Title</label>
<div class="field">
<%= f.text_field :title %>
</div>
  <label>Body</label>
<div class="field">
  <%= f.text_area :body %>
</div>
<div class="actions">
  <%= f.submit 'Create Book' %>
</div>
<% end %>
